<!DOCTYPE html>
<html>
<head>
  <title>URL Shortener</title>
  <style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    header {
        background-color: #0186da;
        color: white;
        padding: 15px 0;
        text-align: center;
    }

    nav {
        display: flex;
        justify-content: center;
        margin-top: 10px;
    }

    nav a {
        color: white;
        padding: 14px 20px;
        text-decoration: none;
        text-align: center;
    }

    nav a:hover {
        background-color: #2c87c5;
        border-radius: 25px;
    }

    footer {
        background-color: #333;
        padding: 10px 0;
        text-align: center;
        position: fixed;
        width: 100%;
        bottom: 0;
    }
    .copyright{
      color: white;

    }
    .title{
      text-align: center;
      font: 900 49px asap, arial;
      color: #0186da;
      letter-spacing: -1px;
      text-shadow: 0 2px 2px #ddd;
      word-wrap: break-word;
      margin-top: 70px;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
      text-align: center;
    }
    input, button {
      font-size: 16px;
      border: none;
      padding: 15px;

    }
    input{
      outline: none;
      width: 70%;
    }
    button {
      cursor: pointer;
      background-color: #2c87c5;
    }
    p{
      font: 17px "source sans pro", arial;
      color: #202020;
      line-height: 1.5;
      padding: 0 0 0 2px;
    }
    .url_input{
      display: flex;
      align-items: center;
      justify-content: space-between;
      border: 1px solid #bbb;
      width: 88%;
      margin: 20px auto;
    }
    .btn{
      color: white;
    }
    .description{
      margin: 30px auto 20px;
      text-align: center;
      max-width: 620px;
    }
    .result {
      margin-top: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .copy-btn {
      margin-left: 10px;
      padding: 5px 10px;
      cursor: pointer;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 3px;
    }
  </style>
</head>
<body>
  <header>
    <nav id="nav">
        <a href="/">Home</a>
        <a href="/url/list-url">List URL</a>
        <a id="authLink" href="/auth/sign-in">Login</a>
    </nav>
  </header>
  <h1 class="title">Short URL</h1>
  <div class="container">
    <h1>Paste the URL to be shortened</h1>
    <form action="/url/shorten" method="post">
      <div class="url_input">
        <input type="text" name="originalUrl" placeholder="Enter URL here" required />
        <button type="submit" class="btn">Shorten URL</button>
      </div>
    </form>

    <% if (shortUrl) { %>
      <div class="result">
        <p>Shortened URL: <a href="<%= shortUrl %>" target="_blank"><%= shortUrl %></a></p>
        <button class="copy-btn" onclick="copyToClipboard('<%= shortUrl %>')">Copy</button>
      </div>
    <% } %>
    <div class="description">
      <p> ShortURL is a free tool to shorten URLs and generate short links</p>
      <p>URL shortener allows to create a shortened link making it easy to share</p>
    </div>
  </div>
  <footer>
    <p class="copyright">&copy; 2024 My Website</p>
  </footer>

  <script>
    function updateNav() {
      const user = JSON.parse(localStorage.getItem('user'));
      const authLink = document.getElementById('authLink');
      const nav = document.getElementById('nav');

      if (user && user.username) {
        authLink.innerText = `Hello, ${user.username}`;
        authLink.href = "#";

        let logoutLink = document.getElementById('logoutLink');
        if (!logoutLink) {
          logoutLink = document.createElement('a');
          logoutLink.id = 'logoutLink';
          logoutLink.href = "#";
          logoutLink.innerText = "Logout";
          logoutLink.onclick = handleLogout;
          nav.appendChild(logoutLink);
        }
      } else {
        authLink.innerText = "Login";
        authLink.href = "/auth/sign-in";
        authLink.onclick = null;

        const logoutLink = document.getElementById('logoutLink');
        if (logoutLink) {
          nav.removeChild(logoutLink);
        }
      }
    }

    function handleLogout() {
      localStorage.removeItem('user');
      window.location.reload();
    }

    function copyToClipboard(url) {
      navigator.clipboard.writeText(url).then(() => {
        alert('URL copied to clipboard');
      }).catch(err => {
        console.error('Failed to copy: ', err);
      });
    }

    document.addEventListener('DOMContentLoaded', updateNav);
  </script>
</body>
</html>
